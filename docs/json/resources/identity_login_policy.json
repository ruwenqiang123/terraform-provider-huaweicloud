{
  "provider_schemas": {
    "huaweicloud/huaweicloud": {
      "resource_schemas": {
        "huaweicloud_identity_login_policy": {
          "block": {
            "attributes": {
              "account_validity_period": {
                "type": "number",
                "optional": true,
                "computed": true
              },
              "custom_info_for_login": {
                "type": "string",
                "optional": true
              },
              "id": {
                "type": "string",
                "computed": true
              },
              "lockout_duration": {
                "type": "number",
                "optional": true,
                "default": 15
              },
              "login_failed_times": {
                "type": "number",
                "optional": true,
                "default": 5
              },
              "period_with_login_failures": {
                "type": "number",
                "optional": true,
                "default": 15
              },
              "session_timeout": {
                "type": "number",
                "optional": true,
                "default": 60
              },
              "show_recent_login_info": {
                "type": "bool",
                "optional": true
              }
            }
          },
          "product": {
            "short": "IAM",
            "name": "Identity and Access Management",
            "catalog": "Management & Governance",
            "name_cn": "统一身份认证服务",
            "catalog_cn": "管理与监管"
          }
        }
      }
    }
  }
}
